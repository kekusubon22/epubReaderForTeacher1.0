<Window x:Class="epubReaderForTeacher1._0.PNGSelectHowToShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PNGSelectHowToShowWindow" Height="200" Width="300" Background="#FFC8C8FF" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="elementButton" Content="要素ごと" Grid.Row="0" Background="#FFC8C8FF" FontSize="36" Click="elementButton_Click" />
        <Button Name="userButton" Content="ユーザごと" Grid.Row="1" Background="#FFC8C8FF" FontSize="36" Click="userButton_Click" />

    </Grid>
</Window>
