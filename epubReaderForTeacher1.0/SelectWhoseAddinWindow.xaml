<Window x:Class="epubReaderForTeacher1._0.SelectWhoseAddinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SelectWhoseAddinWindow" Height="300" Width="300" WindowStyle="ToolWindow">
    <Grid Name="grid1" RenderTransformOrigin="0,0" Background="#FFC8C8FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="administratorButton" Content="管理者" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Background="#FFC8C8FF" FontSize="36" Click="administratorButton_Click"/>
        <Button Name="studentButton" Content="児童" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Background="#FFC8C8FF" FontSize="36" Click="studentButton_Click"/>
        <Button Name="myButton" Content="自分" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto" Background="#FFC8C8FF" FontSize="36" Click="myButton_Click"/>
    </Grid>
</Window>
